@model Dtos.AspNet.LoginDto
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">
<div class="row testbox">
    <div class="col-md-4">
        <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <p>ورود</p>
            <hr />
            <div class="form-group">
                <label asp-for="Email" class="icon">
                    <i class="icon-envelope"></i>
                </label>
                <input asp-for="Email" type="text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="icon">
                    <i class="icon-shield"></i>
                </label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div style="display:flex">
                <button type="submit" class="button">Login</button>
                <a href="/Account/Register" class="link-login">Register</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}